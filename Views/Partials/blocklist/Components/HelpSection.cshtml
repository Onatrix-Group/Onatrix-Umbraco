@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    var content = (ContentModels.HelpSection)Model.Content;
    var bgImage = content.HelpSectionBgImage?.Url() ?? "";
}

<section class="help-section has-help-bg mt-8" style="background-image: url('@bgImage');">
    <div class="help-info-wrapper has-help-bg">

    <h3 class="text-xl font-bold mb-4">
            @content.HelpSectionTitle
        </h3>
        <p>
            @content.HelpSectionDescription
        </p>
        <div class="relative">
            <input type="email"
               placeholder="E-mail address"
               class="w-full p-3 pr-12 rounded bg-[#fff] 
               focus:outline-none mt-6
               placeholder:italic 
               placeholder:font-semibold 
               focus:outline-none mt-6" 
            />

            <span class="absolute right-3 top-1/2 -translate-y-1/2 ">
                <i class="fa-regular fa-envelope text-lg mt-7 text-primary"></i>
            </span>
        </div>
    </div>
</section>